
#version 330 core

//----------------------------------------------------------------------------------------------------------------------

in vec3  iCoords;
in vec2  iTexUV;
in vec3  iNormal;

//----------------------------------------------------------------------------------------------------------------------

uniform mat4  uMatTransform;
uniform float uSkySphereRadius;

//----------------------------------------------------------------------------------------------------------------------

out vec3  vTexUVTCube;

//----------------------------------------------------------------------------------------------------------------------

void main()
{
    gl_Position = uMatTransform * vec4 (iCoords * uSkySphereRadius, 1);

    gl_ClipDistance[0] = 1;   // no clipping for skies
    vTexUVTCube = iCoords;
}
