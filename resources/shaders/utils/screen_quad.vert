
#version 330 core

//----------------------------------------------------------------------------------------------------------------------

in vec3 iCoords;
in vec2 iTexUV;

out vec2 vTexUV;

//----------------------------------------------------------------------------------------------------------------------

void main()
{
    gl_Position = vec4 (iCoords.xy, 0, 1);
    vTexUV = vec2 (iTexUV.x, 1 - iTexUV.y);
}
